---
layout: layout
---
<span class="chocolat-parent" data-chocolat-title="<%= make_collection_title(collection_data[0]) %>">
  <div class="posts collection-typography">
    <h2><%= make_collection_title(collection_data[0]) %></h2>
    <div class="description">
      <%= partial "description", locals: { collection_data: collection_data } %>
    </div>
    <div class="pure-g">
    <% collection_data[1].pieces.each do |p| %>
      <div class="post pure-u-1 pure-u-md-1-3">
        <% link_to p.piece.url, class: "chocolat-image", title: image_title(p.piece)  do %>
          <%= image_tag go_make_thumbnail_url(p.piece.url) %>
        <% end %>
        <p><%= p.piece.title %></p>
      </div>
    <% end %>
    </div>
  </div>
</span>
